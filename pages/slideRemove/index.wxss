page {
  height: 100%;
}

view {
  box-sizing: border-box;
}

.address-title {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2000;
  padding-left: 40rpx;
  box-sizing: border-box;
  font-size: 48rpx;
  font-weight: bold;
  background: #fff;
}
.container-item{
  padding-top: 4rpx;
}
.containerWrap {
  height: 900rpx;
}

.container {
  width: 100%;
}

.container-item {
  margin-top: 6rpx;
  width: 100%
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(150rpx);
  transform: translateX(150rpx);
  margin-left: -150rpx;
}

.del {
  background-color: #98002e;
  width: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(150rpx);
  transform: translateX(150rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.edit-image {
  width: 40rpx;
  height: 40rpx;
}

.edit-nav {
  height: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  padding-right: 40rpx;
  flex-shrink: 0;
}

.content-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 40rpx;
  padding: 45rpx 0 45rpx 0;
  border-bottom: 1rpx solid #e6e6e6;
  box-sizing: border-box;
  position: relative;
}

.content-box-left {
  max-width: 580rpx;
}

.content-address {
  font-size: 28rpx;
  color: #333;
  letter-spacing: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  max-width: 580rpx;
}

.content-address view{
  float: left;
}

.content-address_address {
  font-size: 32rpx;
  font-weight: bold;
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-address_postcode {
  width: 580rpx;
  margin-top: 10rpx;
  line-height: 44rpx;
}

.content-address_type {
  width: 70rpx;
  height: 34rpx;
  line-height: 34rpx;
  border: 1rpx solid #98002e;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #98002e;
  background: #fff;
  margin-left: 10rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.content-address_label {
  width: 70rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
  height: 34rpx;
  line-height: 34rpx;
  background: rgba(136, 14, 39, 0.1);
  color: #98002e;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.content-info {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #999;
  letter-spacing: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-info_tel {
  margin-left: 10rpx;
}

.content-warn {
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #ff8700;
  margin: 20rpx 0 0;
  display: flex;
  justify-content: flex-start;
  position: relative;
  left: -4rpx;
}

.content-warn_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 4rpx;
}

.add-address_fixed {
  width: 100%;
  position: fixed;
  height: 150rpx;
  bottom: 0rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.add-address_fixed-btn {
  position: absolute;
  width: 670rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background: #98002e;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: rgb(255, 255, 255);
  right: 40rpx;
}

.empty {
  margin-top: 40rpx;
  text-align: center;
}

.empty-pic {
  width: 170rpx;
  height: 170rpx;
  margin-top: 260rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-top: 40rpx;
}

.isIphoneX {
  bottom: 34rpx;
}
